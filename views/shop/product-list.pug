extends ../layout.pug

block styles 
        link(rel="stylesheet" href="/css/product.css")
block content 
    main
        div.grid
            if prods.length > 0 
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.p le #{product.title}
                        div.card__image
                            img(src=product.imageUrl alt=product.title)
                        div.card__content
                            h2.product__price $#{product.price}
                            p.product__description #{product.description}
                        div.card__actions
                            a.btn(href=`/products/${product.id}`) Details
                            form(action="/add-to-cart/1" method="POST")
                                button.btn(type="submit") Add to carts
            else 
                h1 No Products Found!  
