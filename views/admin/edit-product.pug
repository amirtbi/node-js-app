extends ../layout.pug

block styles 
    link(rel="stylesheet" href="/css/forms.css")
    
block content
    main
        form.product-form(action=`${isEdit ? '/admin/edit-product' : '/admin/add-product'}` method="POST")
            div.form-control
                label(for="title") Title
                input(type="text" name="title" id="title" value=`${product ? product.title :""}`)
            div.form-control
                label(for="price") Price
                input(type="text" name="price" id="price" value=`${product ? product.price : ""}`)
            div.form-control
                label(for="imageUrl") ImageUrl
                input(type="text" name="imageUrl" id="imageUrl")
            div.form-control
                label(for="description") Description
                textarea(name="description" id="description" rows="5" value=`${product ? product.description :""}`)
            if isEdit 
                button.btn(type="submit") Update Product 
            else 
                button.btn(type="submit") Add Product
